<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vijay.recipeapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".vijay.activity.SplashActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".vijay.activity.FoodListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".vijay.activity.FoodDetailActivity"
            android:parentActivityName=".vijay.activity.FoodListActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".vijay.activity.FoodListActivity" />
        </activity>
        <!-- <activity android:name=".vijay.activity.MainActivity" -->
        <!-- android:theme="@style/AppTheme.NoActionBar"/> -->

        <activity android:name=".vijay.activity.SendObjectActivity" />
        <activity android:name=".vijay.activity.ObjectRecieveActivity"></activity>
    </application>

</manifest>